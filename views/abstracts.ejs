      <% for(let i = 0; i < abstracts.length; i++){ %>
        <div class="mySlides">
          <li class="box">
  
            <h3 class="painting-title">"<%=abstracts[i].title%>"</h3> 
            
            <div>
              <a class="index-image" href="/abstracts/<%=abstracts[i].id%>">
                <img class="image" src="<%=abstracts[i].imageURL%>" alt=""> 
             </a>
            </div>
              
             <h5 class="painting-details"> <span class="painting-author"><%=abstracts[i].author%></span> c. <span class="painting-year"> <%=abstracts[i].year%></span> </h5>
 
         </li>
        </div> 
    <% } %>
    </ul>
    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <a class="next" onclick="plusSlides(1)">❯</a>

  </div>
  <a class="show-page-link" href="/">Back to Home</a>
